<!DOCTYPE html>
<html ng-app="DQCSApp" xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="~/Scripts/jquery-2.0.3.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/bootbox.min.js"></script>
        <script src="~/Scripts/toastr.min.js"></script>
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/toastr.min.css" />
        <style>
            body
            {
                padding-top: 70px; /* 60px to make the container go all the way to the bottom of the topbar */
            }
        </style>
        <title>OFP Check List</title>
    </head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <div class="container">
                    <div class="navbar-header">
                            <a class="navbar-brand" href="#">OFP Check List</a>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        @if (Request.IsAuthenticated)
                        {
                                <li><a href="#"><span class="glyphicon glyphicon-user"></span> @User.Identity.Name</a></li>
                                @*<li>@Html.ActionLink("Manage", "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</li>*@
                                <li>@Html.ActionLink("Log off", "LogOff", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Log off" })</li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login", "Account")"> <span class="glyphicon glyphicon-user"></span> Sign in</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </body>
</html>
